generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Todo {
  id          Int      @id @default(autoincrement())
  title       String
  dueDate     DateTime?
  imageUrl    String?
  createdAt   DateTime @default(now())
  
  // Self-referential many-to-many for dependencies
  dependsOn   TodoDependency[] @relation("Dependent")
  dependedBy  TodoDependency[] @relation("Dependency")
}

model TodoDependency {
  id              Int  @id @default(autoincrement())
  dependentId     Int
  dependencyId    Int
  dependent       Todo @relation("Dependent", fields: [dependentId], references: [id], onDelete: Cascade)
  dependency      Todo @relation("Dependency", fields: [dependencyId], references: [id], onDelete: Cascade)
  
  @@unique([dependentId, dependencyId])
  @@index([dependentId])
  @@index([dependencyId])
}